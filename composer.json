{
    "name": "benjamincrozat/laravel-polyglot",
    "description": "Switch between multiple languages on your Laravel application, the easy way.",
    "license": "WTFPL",
    "authors": [
        {
            "name": "Benjamin Crozat",
            "email": "benjamincrozat@me.com"
        }
    ],
    "keywords": [
        "i18n",
        "laravel",
        "multilingual",
        "polyglot"
    ],
    "require": {
        "php": ">=7.1",
        "illuminate/support": "^5.7"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "BC\\Laravel\\Polyglot\\": "src"
        }
    },
    "extra": {
        "laravel": {
            "aliases": {
                "Polyglot": "BC\\Laravel\\Polyglot\\Facades\\Polyglot"
            }
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

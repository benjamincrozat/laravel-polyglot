{
    "name": "benjamincrozat/laravel-polyglot",
    "description": "Switch between multiple languages on your Laravel application, the easy way.",
    "license": "WTFPL",
    "authors": [
        {
            "name": "Benjamin Crozat",
            "email": "benjamincrozat@me.com"
        }
    ],
    "keywords": [
        "i18n",
        "laravel",
        "multilingual",
        "polyglot"
    ],
    "require": {
        "php" : "^7.4",
        "illuminate/contracts": "*",
        "illuminate/support": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "orchestra/testbench": "3.*"
    },
    "autoload": {
        "psr-4": {
            "BC\\Laravel\\Polyglot\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests"
        ]
    },
    "extra": {
        "laravel": {
            "aliases": {
                "Polyglot": "BC\\Laravel\\Polyglot\\Facades\\Polyglot"
            },
            "providers": [
                "BC\\Laravel\\Polyglot\\PolyglotServiceProvider"
            ]
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
